<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Daily Inspirations"
        android:textSize="50sp"
        android:textColor="@color/customButton2"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationEditText"
        android:layout_above="@+id/findRestaurantsButton"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:hint="Enter Zip Code"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/pic"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/findRestaurantsButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:background="@color/customColor"
        android:text="Quotes" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Favorites"
        android:id="@+id/findRestaurantsButton2"
        android:layout_above="@id/findRestaurantsButton3"
        android:background="@color/customRed"
        android:layout_marginBottom="15dp"
        android:shadowRadius="@android:integer/status_bar_notification_info_maxnum"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="My Quotes"
        android:id="@+id/findRestaurantsButton3"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>